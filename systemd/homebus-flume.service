[Unit]
Description=Homebus publisher for Flume water monitor
After=network.target

[Service]
Type=simple

User=homebus
WorkingDirectory=/home/homebus/homebus-flume

ExecStart=/home/homebus/.rbenv/bin/rbenv exec bundle exec homebus-flume.rb
TimeoutSec=30

Restart=always

[Install]
WantedBy=multi-user.target

